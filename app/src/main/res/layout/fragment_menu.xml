<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/main_background_gradient">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <Button
            android:id="@+id/menuNewGameButton"
            style="@style/ButtonMenuStyle"
            android:text="@string/menu_start_new_game"
            android:layout_marginBottom="@dimen/offset_large"/>
        <Button
            android:id="@+id/menuAboutButton"
            style="@style/ButtonMenuStyle"
            android:text="@string/menu_about"
            android:layout_marginBottom="@dimen/offset_large"/>
        <Button
            android:id="@+id/menuExitButton"
            style="@style/ButtonMenuStyle"
            android:text="@string/menu_quit"
            android:layout_marginBottom="@dimen/offset_large"/>
    </LinearLayout>

</RelativeLayout>