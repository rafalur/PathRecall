<resources>

    <!-- Base application theme. -->
    <style name="AppTheme">
        <!-- Customize your theme here. -->
    </style>

    <style name="DialogNormal" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/dialog_background_transparent</item>
    </style>

    <style name="TextBaseStyle">
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@color/main_color_contrasted</item>
    </style>

    <style name="TextNormal" parent="TextBaseStyle">
        <item name="android:textSize">@dimen/text_normal_size</item>
    </style>

    <style name="TextStatus" parent="TextBaseStyle">
        <item name="android:textSize">@dimen/status_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextLevel" parent="TextBaseStyle">
        <item name="android:typeface">serif</item>
        <item name="android:textSize">@dimen/level_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextDialogTitle" parent="TextBaseStyle">
        <item name="android:typeface">serif</item>
        <item name="android:textSize">@dimen/game_over_dialog_title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextDialogAddPlayerTitle" parent="TextDialogTitle">
        <item name="android:textSize">@dimen/add_player_dialog_title</item>
    </style>

    <style name="TextDialogSubtitle" parent="TextBaseStyle">
        <item name="android:typeface">serif</item>
        <item name="android:textSize">@dimen/game_over_dialog_subtitle_text_size</item>
    </style>

    <style name="TextScore" parent="TextBaseStyle">
        <item name="android:textSize">@dimen/score_text_size</item>
        <item name="android:typeface">serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextScoreFloating" parent="TextScore">
        <item name="android:textSize">@dimen/floating_score_text_size</item>
    </style>

    <style name="TextInfoLabel" parent="TextBaseStyle">
        <item name="android:textSize">@dimen/info_label_text_size</item>
    </style>
    <style name="TextInfoValues" parent="TextBaseStyle">
        <item name="android:textColor">@color/main_accent_color</item>
        <item name="android:textSize">@dimen/info_label_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAbout" parent="TextBaseStyle">
        <item name="android:textSize">@dimen/about_text_size</item>
    </style>

    <style name="TextPlayersSpinner" parent="TextBaseStyle">
        <item name="android:textSize">@dimen/spinner_player_name</item>
    </style>

    <style name="ButtonNormalStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/button_regular_height</item>
        <item name="android:minWidth">@dimen/button_regular_min_width</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:paddingTop">@dimen/padding_button</item>
        <item name="android:paddingBottom">@dimen/padding_button</item>
        <item name="android:paddingLeft">@dimen/padding_button</item>
        <item name="android:paddingRight">@dimen/padding_button</item>
        <item name="android:textColor">@color/main_color_contrasted</item>
        <item name="android:textSize">@dimen/button_normal_text_size</item>
    </style>

    <style name="ButtonDialogStyle" parent="ButtonNormalStyle">
        <item name="android:paddingLeft">@dimen/offset_large</item>
        <item name="android:paddingRight">@dimen/offset_large</item>
    </style>

    <style name="ButtonMenuStyle" parent="ButtonNormalStyle">
        <item name="android:minWidth">@dimen/button_menu_width</item>
        <item name="android:layout_height">@dimen/button_menu_height</item>
        <item name="android:paddingLeft">@dimen/offset_xlarge</item>
        <item name="android:paddingRight">@dimen/offset_xlarge</item>
        <item name="android:textSize">@dimen/button_menu_text_size</item>
    </style>

    <style name="ButtonAddPlayerStyle" parent="ButtonNormalStyle">
        <item name="android:minWidth">@dimen/button_add_player_size</item>
        <item name="android:layout_height">@dimen/button_add_player_size</item>
        <item name="android:textSize">@dimen/button_menu_text_size</item>
    </style>


    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider_normal</item>
    </style>

    <style name="SpinnerRegular">
        <item name="android:background">@drawable/player_spinner_background_30x30</item>
        <item name="android:popupBackground">@drawable/player_spinner_popup_background_30x30</item>
        <item name="android:dropDownVerticalOffset">@dimen/offset_medium</item>
    </style>
</resources>
