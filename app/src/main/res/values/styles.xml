<resources>

    <!-- Base application theme. -->
    <style name="AppTheme">
        <!-- Customize your theme here. -->
    </style>
    <style name="TitleStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextMainAccent">
        <item name="android:textColor">@color/main_accent_color</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonNormalStyle">
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:padding">@dimen/padding_button</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider_normal</item>
    </style>

</resources>
